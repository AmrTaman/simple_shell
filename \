#include "shell.h"



char **aa(void)
{
	int i = 0, n = 0;
	char *env, *path, *tok, **dirs;

	while (environ[i])
        {
		env = environ[i];
		if (strncmp(env, "PATH", 4)
				== 0 && env[4] == '=')
		{
			path = env + 5;
                        break;
                }
		i++;
        }
	i = 0;
	printf("%s\n", path);
	while (path[i])
	{
		if (path[i] == ':')
			n++;
		i++;
	}
	if (n != 0)
		n++;
	printf("%d\n",n);
	dirs = malloc(sizeof(char *) * n);
	i = 0;
	tok = strtok(path, ":");
	while (tok)
	{
		dirs[i] = tok;
		//dirs[i] = strcat(dirs[i], "/");
		tok = strtok(NULL, ":");
		printf("%s\n", dirs[i]);
		i++;
	}
	i = 0;
	while (dirs[0])
	{
		dirs[i] = strcat(dirs[i], "/");
		printf("%s\n", dirs[i]);
	}
}
